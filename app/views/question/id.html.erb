<h1><%=@question.title %></h1>
<p><%= @question.body %></p><br><br>
<p id="q_votes"><button id="question_plus" class="fa fa-plus" style="color:green"></button><input id="q_vote_id"name="q_vote_id" type="hidden" value="<%= QuestionVote.find_by(question_id: @question.id).id%>"><%= @vote.counter%><button id="question_minus" class="fa fa-minus" style="color:red"></button></p>
<br><br><br>


<p><i class="fa fa-pencil"></i><%= link_to 'Answer', '/answers/new/'+ params[:id] %></p>
<br><br>
<h4>Answers:</h4><br>

<% Answer.all.each do|x| %>

  <% if x.question_id == @question.id %>
  <div class="well" style="background-color: #BCBCBC">
    <p class="a_votes">
      <button  class="fa fa-plus answer_plus" style="color:green" >
        <input name="a_vote_id" type="hidden" value="<%= AnswerVote.find_by(answer_id: x.id).id%>"/>
      </button>
      <i><%= AnswerVote.find_by(answer_id: x.id).counter%></i>
      <button  class="fa fa-minus answer_minus" style="color:red">
        <input name="a_vote_id" type="hidden" value="<%= AnswerVote.find_by(answer_id: x.id).id%>"/>
      </button>
    </p>
   <p><%=x.body%></p> <p> <strong>Answered by: <%= @user.find(x.user_id).first_name %>&nbsp;<%= @user.find(x.user_id).last_name %></strong></p>&nbsp;
    <%=x.quest_date%>
    </div>
<% end %>

<% end %>

<br>
<br>
